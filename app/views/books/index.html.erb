<% if user_signed_in? %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= 'Book Name' %></th>
        <% if admin? %>
          <th><%= 'Author' %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author.name %>
          <% if admin? %>
            <td>
              <%= link_to books_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash-alt" title='Delete'></i>
              <% end %> 
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>